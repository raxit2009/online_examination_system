<h2>Log in</h2>
<div id="main">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email, autofocus: true %>
    </div>

    <div class="row pass">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", :id => "password1" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
      <div class="arrowCap"></div>
      <div class="arrow"></div>
      <p class="meterText">Password Meter</p>
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
